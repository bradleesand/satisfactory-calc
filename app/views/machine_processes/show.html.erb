<p>
  <strong>Recipe:</strong>
  <%= link_to @machine_process.recipe.name, @machine_process.recipe %>
</p>
<p>
  <strong>Rate:</strong>
  <%= pluralize @machine_process.rate, 'second' %>
</p>

<p>
  <strong>Output: </strong>
  <%= link_to_pluralized_object @machine_process.per_minute, @machine_process.recipe.output %>
  / minute
  <%= link_to fa_icon('calculator'), calc_path(amount: @machine_process.per_minute, resource: @machine_process.recipe.output), class: 'btn btn-sm btn-info' %>
</p>

<p>
  <strong>Inputs:</strong>
</p>
<% @machine_process.recipe.recipe_inputs.each do |input| %>
  <p>
    <%= link_to_pluralized_object @machine_process.per_minute(input.amount), input.resource %>
    / minute
  </p>
<% end %>

<%= link_to 'Add Another', action: :new %> |
<%= link_to 'Edit', edit_machine_process_path(@machine_process) %> |
<%= link_to 'Back', machine_processes_path %>
