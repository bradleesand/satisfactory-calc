<p>
  <strong>Recipe:</strong>
  <%= link_to @machine_process.recipe.name, @machine_process.recipe %>
</p>
<p>
  <strong>Rate:</strong>
  <%= pluralize @machine_process.rate, 'second' %>
</p>

<p>
  <strong>Output: </strong>
  <%= @machine_process.per_minute %>
  <%= link_to @machine_process.recipe.output.name, @machine_process.recipe.output %>
  / minute
</p>

<p>
  <strong>Inputs:</strong>
</p>
<% @machine_process.recipe.recipe_inputs.each do |input| %>
  <p>
    <%= @machine_process.per_minute input.amount %>
    <%= link_to input.name, input.resource %>
    / minute
  </p>
<% end %>

<%= link_to 'Add Another', action: :new %> |
<%= link_to 'Edit', edit_machine_process_path(@machine_process) %> |
<%= link_to 'Back', machine_processes_path %>
